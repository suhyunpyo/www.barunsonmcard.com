@using MobileInvitation.Models
@using MobileInvitation.FunctionHelper;
@{
    Layout = "User_Layout_m";
}
@{
    int Notice_Id = 0;
    string Title = "", Content = "", Top_Yn = "", View_Yn = "", Regist_DateTime = "";
}
@foreach (TB_Board item in ViewBag.NoticeView)
{
    Notice_Id = item.Board_ID;
    Title = item.Title;
    Content = item.Content;
    Top_Yn = item.Top_YN;
    View_Yn = item.Display_YN;
    Regist_DateTime = item.Regist_DateTime.ToString();
}
@Html.Hidden("Board_Category", "N")
@Html.Hidden("Board_ID", Notice_Id)


<link rel="stylesheet" href="/css/m_customer.css">
<section class="customer ask">
    <div class="sub_con_wrap mypage_service">
        <div class="sub_title_box">
            <div class="area">
                <h2><a href="/Customer/Notice">공지사항</a></h2>
            </div>
        </div>
        <!-- contents -->
        <div class="mypage_con">
            <!-- 공지사항 상세 -->
            <div class="notice_content">
                <div class="notice_detail">
                    <p class="notice_title"><strong class="point03">@Title</strong></p>
                    <div class="notice_text">
                        @Html.Raw(System.Net.WebUtility.HtmlDecode(Content))
                        @*@Html.Raw(System.Net.WebUtility.HtmlDecode(Content))*@
                    </div>
                </div>
                <div class="btn_wrap type01">
                    <a href="/Customer/Notice" class="btn type02">목록으로</a>
                </div>
            </div>
            <!-- //공지사항 상세 -->
        </div>
        <!-- //contents -->
    </div>
</section>



@section Scripts
{
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.5.1/js/swiper.js"></script>
    <script src="/js/common/customer.js"></script>
}