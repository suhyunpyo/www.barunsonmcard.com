<script>
    PagingNavigator();



    $("[name=SearchTxt]").keypress(function (event) {
        if (event.which == 13) {
            $("[name=SearchGo]").click();
            return false;
        }
    });

    //검색
    $("[name=SearchGo]").click(function () {
        $("#FaqList").submit();

    });

</script>