            {*@
                    <div class="cs_content">
                        <div class="area">
                            <div class="cs_search">
                                <input type="text" name="SearchTxt" class="inp" placeholder="궁금하신 내용을 검색해 보세요" value="@ViewData["SearchTxt"]" />
